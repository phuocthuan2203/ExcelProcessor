@{
    ViewData["Title"] = "Enter Numbers";
}

<h2>Enter Numbers</h2>

<form asp-action="Calculate" method="post">
    <div class="form-group">
        <label for="firstNum">First Number:</label>
        <input type="number" step="any" class="form-control" id="firstNum" name="firstNum" required>
    </div>
    <div class="form-group">
        <label for="secondNum">Second Number:</label>
        <input type="number" step="any" class="form-control" id="secondNum" name="secondNum" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>